<section class="sidebar">
	<div class="sidebar-header">
		<img class="monkey-icon" src="/assets/icons/monkey-icon-white.png" alt="monkey-icon">
		<h1>MonkeyFeed</h1>
		<img onclick="closeSidebar()" id="closeSidebar" src="/assets/icons/close.svg" alt="close-icon">
	</div>
	<div class="sidebar-body">
		<span class="header">Suas Inscrições <img onclick="toggleModalAdd()" src="/assets/icons/add-white.svg" alt="add-icon"></span>
		<div class="subscriptions">
			<% if (subs.length === 0) { %>
				<span class="sub">Adicione uma Inscrição</span>
			<% } else { %>
				<% for (let i = 0; i < subs.length; i++) { %>
					<span class="sub">
						<p onclick="changeFeed('<%= subs[i].id %>')"><%= subs[i].name %></p>
						<img onclick="openMore(this, '<%= subs[i].id %>')" src="/assets/icons/more_vert.svg" alt="more-icon">
						<div class="modal-more hidden">
							<p>Editar</p>
							<p id="deleteSub">Excluir</p>
						</div>
					</span>
				<% } %>
			<% } %>
			<script src="/scripts/change_feed.js"></script>
		</div>
	</div>
	<div class="sidebar-footer">
		<% if (provider === null) { %>
			<a href="/provider/register">Deseja publicar notícias?</a>
		<% } else { %>
			<a href="/">Suas notícias publicadas</a>
		<% } %>
		<a href="/signout"><img src="/assets/icons/logout.svg" alt="logout-icon">Sair</a>
	</div>
	<script src="/scripts/modal.js"></script>
</section>
